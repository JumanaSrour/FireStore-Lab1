<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ThirdAnalyticsActivity">

    <Button
        android:id="@+id/btn_food"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="187dp"
        android:text="Food"
        android:background="@drawable/btn_regular"
        app:backgroundTint="@null"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_electrics"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_regular"
        android:text="Electronics"
        android:textAllCaps="false"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="@+id/btn_food"
        app:layout_constraintTop_toBottomOf="@+id/btn_food" />

    <Button
        android:id="@+id/btn_clothes"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_regular"
        android:text="Clothes"
        android:textAllCaps="false"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="@+id/btn_electrics"
        app:layout_constraintTop_toBottomOf="@+id/btn_electrics" />
</androidx.constraintlayout.widget.ConstraintLayout>